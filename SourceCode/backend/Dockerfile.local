FROM eclipse-temurin:17-jre

WORKDIR /app

# Copy the pre-built JAR file
COPY target/*.jar app.jar

# Install curl for healthcheck
USER root
RUN apt-get update \
    && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]








